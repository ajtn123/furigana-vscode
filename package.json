{
  "name": "furigana-vscode",
  "displayName": "Furigana Inserter",
  "description": "Insert furigana automatically.",
  "version": "0.0.1",
  "publisher": "AoiCoco",
  "repository": {
    "url": "https://github.com/ajtn123/furigana-vscode"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "furigana-vscode.insertFurigana",
        "title": "Insert Furigana"
      }
    ],
    "keybindings": [
      {
        "command": "furigana-vscode.insertFurigana",
        "key": "Ctrl+F G"
      }
    ],
    "configuration": {
      "title": "Furigana Inserter",
      "properties": {
        "furigana-vscode.kuroshiro.to": {
          "type": "string",
          "enum": [
            "hiragana",
            "katakana",
            "romaji"
          ],
          "default": "hiragana",
          "description": "Kuroshiro: Target syllabary"
        },
        "furigana-vscode.kuroshiro.mode": {
          "type": "string",
          "enum": [
            "normal",
            "spaced",
            "okurigana",
            "furigana"
          ],
          "default": "okurigana",
          "description": "Kuroshiro: Convert mode"
        },
        "furigana-vscode.kuroshiro.romajiSystem": {
          "type": "string",
          "enum": [
            "nippon",
            "passport",
            "hepburn"
          ],
          "default": "hepburn",
          "description": "Kuroshiro: Romanization system"
        },
        "furigana-vscode.kuroshiro.delimiter_start": {
          "type": "string",
          "default": "{",
          "description": "Kuroshiro: Delimiter(Start)"
        },
        "furigana-vscode.kuroshiro.delimiter_end": {
          "type": "string",
          "default": "}",
          "description": "Kuroshiro: Delimiter(End)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "kuroshiro": "^1.2.0",
    "kuroshiro-analyzer-kuromoji": "^1.1.0"
  }
}

